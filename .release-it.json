{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release ${version}",
    "push": true,
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": ["npm run test:run", "npm run build"],
    "after:release": "gh release create v${version} --title 'v${version}' --notes-from-tag"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "prompts": {
    "incrementList": false
  }
}
